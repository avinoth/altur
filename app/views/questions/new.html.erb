<h1>New Question</h1>

<%= form_for :question, url: questions_path do |f| %>
	<% if @question.errors.any? %>
		<div class="errors">
			<h2><%= pluralize(@question.errors.count, "error") %> prevented from saving the file</h2>
			<ul>
				<% @question.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :content %><br>
	<%= f.text_area :content %><br>
	<%= f.submit %>

<% end %>