<%= form_for @question do |f| %>
	<% if @question.errors.any? %>
		<div class="errors">
			<h2><%= pluralize(@question.errors.count, "error") %> prevented from saving the file</h2>
			<ul>
				<% @question.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :question %><br>
	<%= f.text_area :question %><br>
	<%= f.submit %>

<% end %>