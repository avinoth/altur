<!DOCTYPE html>
<html>
<head>
  <title>Altur</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar">
		<%= link_to root_path do %>
			<%= image_tag "imagehere.jpg" %>
		<% end %>


	<div class="navlinks">


		<% if user_signed_in? %>
				<%= link_to 'My Questions', user_path(current_user) %>
				<%= link_to "New question", new_question_path %>
				Logged in as <%= current_user.email %>, Not You? 
				<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
		<% else %>
	  		<%= link_to('Login', new_user_session_path)  %> or <%= link_to('Signup', new_user_registration_path) %>
		<% end %>

	</div>
</nav>

	<% if current_page?(root_path) %>
   	<p>All Questions</p>
  <% elsif current_page?(about_path) %>
   	<p>About</p>
  <% else %>
   	<%= link_to "Back to All Questions", root_path %>
  <% end %>
	


<%= yield %>

<footer><%= link_to "About", about_path %></footer>
</body>
</html>
